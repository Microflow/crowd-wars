<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Vote Projects</h1>
  <p class="lead">Please vote before: <b>12 May 2019</b>!.</p>
</div>
    
<div class="card-deck mb-3 text-center">
  <% @projects.each do |project| %>
  <div class="card mb-4 box-shadow">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal"><%= project.name %></h4>
    </div>
    <div class="card-body">
      <!--<h1 class="card-title pricing-card-title">$0 <small class="text-muted">/ mo</small></h1>-->
      <ul class="list-unstyled mt-3 mb-4">
        <li><%= project.description %></li>
        <li><%= project.period %></li>
        
        
      </ul>
      <button type="button" class="btn btn-lg btn-block btn-outline-primary">Vote</button>
    </div>
  </div>
  <% end %>
</div>


<%= link_to 'New Project', new_project_path %>
